<div class="habits-new-wrapper">
  <div class="habits-container">
    <div class="row">
      <div class='col-md-8 mx-auto'>
        <div class='row'>
          <div class='col-md-6 mx-auto'>
            <h1 class="text-center text-black">Register your new habits!</h1>
            <%= form_for (@habit) do |f| %>
              <div class="form-group">
                <%= f.label "Daily Habit", class: 'text-black' %>
                <%= f.text_field :daily, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label "Weekly Habit", class: 'text-black' %>
                <%= f.text_field :weekly, class: 'form-control' %>
              </div>
              <%= f.submit "Send", class:"btn btn-info" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
