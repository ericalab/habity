<% provide(:title, 'Sign up') %>

<div class="users-new-wrapper">
  <div class="users-new-container">
    <div class="row">
      <div class='col-md-8 mx-auto'>
        <div class='row'>
          <div class='col-md-6 mx-auto'>
            <h1 class="text-center text-black"><%= t("dictionary.label.signup") %></h1>
            <%= form_for (@user) do |f| %>
              <%= render 'shared/error_messages' %>
              <div class="form-group">
                <%= f.label t("dictionary.label.name"), class: 'text-black' %>
                <%= f.text_field :name, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label t("dictionary.label.email"), class: 'text-black' %>
                <%= f.text_field :email, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label t("dictionary.label.password"), class: 'text-black' %>
                <%= f.password_field :password, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label t("dictionary.label.password_confirmation"), class: 'text-black' %>
                <%= f.password_field :password_confirmation, class: 'form-control' %>
              </div>
              <div class="form-group">
              <%= f.submit "登録", class:"btn btn-info" %>
              <%= link_to 'ログインはこちら', login_path ,class: 'text-black' %>
              <div class="form-group">    
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
