<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: @user %>

  <%= f.label t("dictionary.label.name") %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label t("dictionary.label.email") %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label t("dictionary.label.password") %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label t("dictionary.label.password_confirmation") %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.submit t("dictionary.label.signup"), class: 'btn btn-white w-100 my-3' %>
<% end %>