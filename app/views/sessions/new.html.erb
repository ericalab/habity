<div class="users-new-wrapper">
  <div class="users-new-container">
    <div class="row">
      <div class= 'col-md-8 mx-auto'>
        
        <h1 class="text-center text-black"><%= t("dictionary.label.login") %></h1>
        <%= form_for :session, url: login_path do |f| %>
          <div class= 'col-md-6 mx-auto'>
            <%= f.label t("dictionary.label.email"), class: "text-black" %>
            <%= f.text_field :email, class: "form-control" %>
          </div>
          <div class= 'col-md-6 mx-auto'>
            <%= f.label t("dictionary.label.password"), class: "text-black" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <div class= 'col-md-6 mx-auto'>
            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span><%= t("dictionary.label.remember_me") %></span>
            <% end %>
          </div>
          
          <div class='col-md-6 mx-auto '>
             <%= f.submit t("dictionary.label.login"), class: 'btn btn-white w-100 my-3' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>